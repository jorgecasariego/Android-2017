<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jorgecasariego.fragments.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ejercicios Fragments"
        android:padding="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/fragments_estaticos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragments Estaticos"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/fragments_dinamicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragments Dinamicos"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/ejercicio_combos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio Combos"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
